<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.geeksters.hq.fragments.OneProfileFragment"
    android:id="@+id/frameLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/profile_imbackground_1242x1102"
                android:id="@+id/personalInformation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:visibility="visible"
                    android:src="@drawable/pictureprofile_small_28x28"
                    android:focusable="false"
                    app:border_width="3dp"
                    app:border_color="#FFFFFF"
                    android:focusableInTouchMode="false"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="@string/full_name"
                        android:textSize="20dp"
                        android:singleLine="false"
                        android:textColor="#ffffff"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/hubInformation"
                        android:layout_marginTop="25dp">

                        <ImageView
                            android:id="@+id/hubImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:src="@drawable/profile_house_38x42" />

                        <TextView
                            android:id="@+id/hubName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="@string/hub_name"
                            android:textSize="18dp"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <HorizontalScrollView
                        android:id="@+id/horiz_scroll_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fillViewport="true"
                        android:measureAllChildren="false"
                        android:scrollbars="none" >
                    <LinearLayout
                        android:id="@+id/innerLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/facebook_Button"
                            android:src="@drawable/profile_contact_facebook" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/twitter_Button"
                            android:src="@drawable/profile_contact_twitter" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/linkedin_Button"
                            android:src="@drawable/profile_contact_linkedin" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/skype_Button"
                            android:src="@drawable/profile_contact_skype" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/blog_Button"
                            android:src="@drawable/profile_contact_blog" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/web_Button"
                            android:src="@drawable/profile_contact_web" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/phone_Button"
                            android:src="@drawable/profile_contact_phone" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/rows_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/profile_contact_arrow_127x122" />

                </RelativeLayout>


                <RelativeLayout
                android:id="@+id/one_hub_tabs"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:alpha="0.7"></LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp">

                    <Button android:id="@+id/list_Button"
                        android:layout_width="140dp" android:layout_height="match_parent"
                        android:text="INFO"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:background="#ffffff"
                        android:textColor="#fd757575"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/list_buttonlight"
                        android:layout_width="70dp"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/buttonline_selected_407x9">

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">


                    <Button android:id="@+id/marketplace_Button"
                        android:layout_width="140dp" android:layout_height="60dp"
                        android:text="OPPORTUNITIES"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:background="#ffffff"
                        android:textColor="#fd757575"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/marketplace_buttonlight"
                        android:layout_width="70dp"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/buttonline_nonselected_407x9">

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            </LinearLayout>


            <FrameLayout
                android:id="@+id/realtabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>



</FrameLayout>