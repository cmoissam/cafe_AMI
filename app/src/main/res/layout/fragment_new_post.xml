<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#02115a"></LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#02115a">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#02115a"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/border"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left"
                        android:background="@drawable/left_colour_01"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:background="#dcdddf">
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="3dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginTop="3dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingTop="3dp"
                            android:id="@+id/personalInformation">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/picture"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/pictureprofile_small_28x28"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/fullName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/full_name"
                                    android:textSize="14dp"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textColor="#FF128B90" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/hubInformation"
                                    android:layout_marginTop="4dp">

                                    <TextView
                                        android:id="@+id/datePost"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="Now"
                                        android:ems="10"
                                        android:layout_weight="1"
                                        android:textSize="14dp"
                                        android:textColor="#FFBFC0C1"
                                        android:layout_marginTop="2dp"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp">


                            <EditText
                                android:id="@+id/post_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:maxHeight="50dp"
                                android:hint="add your post"
                                android:inputType="textMultiLine"
                                android:selectAllOnFocus="true"
                                android:background="#FFFFFF"
                                android:textColor="#000000"
                                android:gravity="top"
                                android:padding="12dp"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#02115a">



            <LinearLayout
                android:id="@+id/interestContent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:background="@drawable/interests_borders_post">


                <EditText
                    android:id="@+id/interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:inputType="textPersonName"
                    android:background="#FFFFFF"
                    android:hint="add interest"
                    android:ems="10"
                    android:padding="7dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/addButtonInterest"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:focusable="false"
                    android:background="@drawable/meedit_plus_android"/>

            </LinearLayout>

                <EditText
                    android:id="@+id/added_interests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:maxHeight="40dp"
                    android:focusable="false"
                    android:lines="1"
                    android:selectAllOnFocus="true"
                    android:background="#FFFFFF"
                    android:textColor="#0079FF"
                    android:gravity="top"
                    android:padding="12dp"/>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="left"
                        android:background="@drawable/directory_search_125x125"/>

                    <!-- Editext for Search -->
                    <EditText android:id="@+id/inputSearch"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:inputType="textPersonName"
                        android:hint="@string/search_members"
                        android:layout_gravity="left"
                        android:layout_marginRight="15dp"
                        android:textSize="12dp"
                        android:background="#FFFFFF"
                        android:padding="12dp"/>

                </RelativeLayout>

                </LinearLayout>

        </LinearLayout>


       <!-- <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/send_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="SEND"
                android:paddingLeft="5dp"
                android:textColor="#FF02135D"
                android:textSize="14dp"
                android:gravity="left|center_vertical"
                android:background="@drawable/save_task_border"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/replay"
