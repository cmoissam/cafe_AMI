<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="co.geeksters.cafe_ami.activities.LoginActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/googleplay">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="150dp"
                android:alpha="0.7"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/left_colour_02_horiz">
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#a9a9a9"
                            android:text="Conception"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#FF548989"
                android:text="Kamel Magour (Geeksters)"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#a9a9a9"
                android:text="Project Coordination"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FF548989"
                    android:text="Tia - Kathy - Marcus - Kamel"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#a9a9a9"
                    android:text="Development management"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FF548989"
                    android:text="Soukaina (Geeksters)"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#a9a9a9"
                    android:text="Development"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FF548989"
                    android:text="Marouane - Issam (Geeksters)"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#a9a9a9"
                    android:text="Artistic Direction"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FF548989"
                    android:text="Hernan - Tia - Eoin - Aisha"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_horizontal"
                    android:textColor="#FF548989"
                    android:text=" Thank you Karen - Abhneet And all the terrific onesis who tested the app and gave feedback !"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:background="#c4c4c4"
                    android:layout_marginRight="20dp">

                </LinearLayout>

                <TextView
                    android:id="@+id/text_thanks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FF548989"
                    android:text="thank's all"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

            </RelativeLayout>
</LinearLayout>



