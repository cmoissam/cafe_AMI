<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.geeksters.hq.fragments.MyToDosFragment">

    <!-- Get Members progress -->
    <ProgressBar android:id="@+id/todosProgress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/todosForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView android:id="@+id/myTodosScrollView" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <!-- List View -->

                <ListView
                    android:id="@+id/list_view_my_todos"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:dividerHeight="3px"/>

                <!-- Extend Search -->
                <!--<TextView android:id="@+id/displayAll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:layout_margin="5dp"
                    android:text="@string/display_all"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:padding="12dp"
                    android:background="@drawable/border"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal" />-->

            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ON TODO"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>

