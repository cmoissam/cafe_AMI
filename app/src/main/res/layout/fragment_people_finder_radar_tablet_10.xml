<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_02_2208x1242"
    tools:context="co.geeksters.cafe_ami.fragments.PeopleFinderRadarFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/radarForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TODO : RADAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAR-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/radar_green">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/radar_4to6km"/>

                <RelativeLayout
                    android:id="@+id/radar_form_6km"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_6_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="150dp"
                        app:border_width="3dp"
                        app:border_color="#FF2F6B6C"
                        android:visibility="invisible"
                        android:background="@drawable/pictureprofile_big_98x98"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_6_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="50dp"
                        app:border_width="3dp"
                        android:visibility="invisible"
                        app:border_color="#FF2F6B6C"
                        android:background="@drawable/pictureprofile_big_98x98"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_6_3"
                        android:visibility="invisible"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="200dp"
                        app:border_width="3dp"
                        app:border_color="#FF2F6B6C"
                        android:background="@drawable/pictureprofile_big_98x98"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_6_4"
                        android:visibility="invisible"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="50dp"
                        app:border_width="3dp"
                        app:border_color="#FF2F6B6C"
                        android:background="@drawable/pictureprofile_big_98x98"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_6_5"
                        android:layout_width="90dp"
                        android:visibility="invisible"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="200dp"
                        app:border_width="3dp"
                        app:border_color="#FF2F6B6C"
                        android:background="@drawable/pictureprofile_big_98x98"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:visibility="invisible"
                        android:id="@+id/image_6_more"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="200dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/radar_more_green"/>

                        <TextView
                            android:id="@+id/text_6_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="300dp"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginRight="-100dp"
                    android:layout_marginBottom="-100dp"
                    android:background="@drawable/radar_blue">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/radar_2to4km"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:id="@+id/radar_form_4km"
                        android:layout_marginBottom="100dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_4_1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="150dp"
                            android:visibility="invisible"
                            app:border_width="3dp"
                            app:border_color="#FF282947"
                            android:background="@drawable/pictureprofile_big_98x98"/>
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:visibility="invisible"
                            android:id="@+id/loadingGif"
                            android:layout_marginTop="200dp">
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="150dp" android:layout_height="50dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/loading_menu_02_android"
                                />
                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_4_2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="50dp"
                            android:visibility="invisible"
                            android:layout_marginTop="150dp"
                            app:border_width="3dp"
                            app:border_color="#FF282947"
                            android:background="@drawable/pictureprofile_big_98x98"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_4_3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:visibility="invisible"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="280dp"
                            app:border_width="3dp"
                            app:border_color="#FF282947"
                            android:background="@drawable/pictureprofile_big_98x98"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_4_4"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:visibility="invisible"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="300dp"
                            app:border_width="3dp"
                            app:border_color="#FF282947"
                            android:background="@drawable/pictureprofile_big_98x98"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_4_5"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:visibility="invisible"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="220dp"
                            app:border_width="3dp"
                            app:border_color="#FF282947"
                            android:background="@drawable/pictureprofile_big_98x98"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="250dp"
                            android:visibility="invisible"
                            android:id="@+id/image_4_more"
                            android:orientation="vertical"
                            android:layout_marginLeft="150dp">

                            <de.hdodenhof.circleimageview.CircleImageView

                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/radar_more_blue"/>

                            <TextView
                                android:id="@+id/text_4_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="320dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radar_red">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="80dp"
                            android:background="@drawable/radar_0to2km"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="70dp"
                            android:id="@+id/radar_form_2km"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image_2_1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:visibility="invisible"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="100dp"
                                android:layout_marginBottom="100dp"
                                app:border_width="3dp"
                                app:border_color="#FF8F3E42"
                                android:background="@drawable/pictureprofile_big_98x98"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image_2_2"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:visibility="invisible"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="100dp"
                                android:layout_marginTop="130dp"
                                app:border_width="3dp"
                                app:border_color="#FF8F3E42"
                                android:background="@drawable/pictureprofile_big_98x98"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image_2_3"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:visibility="invisible"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="100dp"
                                android:layout_marginBottom="100dp"
                                app:border_width="3dp"
                                app:border_color="#FF8F3E42"
                                android:background="@drawable/pictureprofile_big_98x98"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image_2_4"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:visibility="invisible"
                                android:layout_marginLeft="100dp"
                                android:layout_marginTop="150dp"
                                app:border_width="3dp"
                                app:border_color="#FF8F3E42"
                                android:background="@drawable/pictureprofile_big_98x98"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="120dp"
                                android:id="@+id/image_2_more"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/radar_more_red"/>

                                <TextView
                                    android:id="@+id/text_2_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>





            </RelativeLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/me"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp"
                app:border_width="3dp"
                app:border_color="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pictureprofile_big_98x98"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/turn_location_layout"
            android:background="@drawable/background_02_2208x1242"
            android:visibility="invisible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radar_green"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/radar_location_blue_android"/>


                        <TextView
                            android:layout_width="wrap_content" android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="turn location on for search"
                            android:id="@+id/text_view_turn_location"
                            android:textColor="#02115a"/>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/me_turn_location"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                app:border_width="3dp"
                app:border_color="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/pictureprofile_big_98x98"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </RelativeLayout>




    </RelativeLayout>



</FrameLayout>