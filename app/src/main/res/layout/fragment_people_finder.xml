<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="co.geeksters.hq.fragments.PeopleFinderFragment"
    android:id="@+id/frameLayout">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="#FFEDEDED">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:background="#e0e5e9">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="11"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4">

                            <Button android:id="@+id/radar_Button"
                                android:layout_width="match_parent" android:layout_height="45dp"
                                android:text="RADAR"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:background="@drawable/save_task_border"
                                android:textColor="#fd757575"
                                />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/radar_buttonlight"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_height="3dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/buttonline_selected_407x9">
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_marginRight="10dp"
                            android:layout_height="45dp">

                            <Button android:id="@+id/list_Button"
                                android:layout_width="match_parent" android:layout_height="45dp"
                                android:text="LIST"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:background="@drawable/save_task_border"
                                android:textColor="#fd757575"
                                />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/list_buttonlight"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_height="3dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/buttonline_nonselected_407x9">
                            </LinearLayout>
                        </RelativeLayout>



                    <LinearLayout
                        android:id="@+id/layout_switch"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:weightSum="4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="45dp"
                            android:background="#FFFFFF">



                        <ImageView
                            android:id="@+id/radar_no_activate"
                            android:layout_width="25dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_height="30dp"
                            android:background="@drawable/radar_lcation_desactivated"
                            android:visibility="invisible"
                            />
                            <ImageView
                            android:id="@+id/radar_no_activate1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_4_pattern"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="45dp"
                            android:background="#FFFFFF">



                            <ImageView
                                android:id="@+id/radar_activate"
                                android:layout_width="25dp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_height="30dp"
                                android:background="@drawable/radar_lcation_activated"
                                />
                            <ImageView
                                android:id="@+id/radar_activate1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_4_pattern"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                    </LinearLayout>

                            </LinearLayout>

                    </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/realtabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </FrameLayout>

                </LinearLayout>



</FrameLayout>