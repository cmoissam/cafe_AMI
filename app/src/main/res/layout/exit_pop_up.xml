<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoImage"
                android:background="@drawable/popup_info"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Tousand Network"
                android:textAlignment="center"
                android:id="@+id/infoTitle"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FFBFC0C1"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Are you sure ou want to quit ?"
            android:textAlignment="center"
            android:textColor="#FFBFC0C1"
            android:padding="10dp"
            android:textSize="18dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/infoText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:background="@drawable/popup_buttonback">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="40dp"
                    android:text="EXIT"
                    android:textColor="#02115a"
                    android:id="@+id/quite_image"
                    android:background="@drawable/save_task_border"
                    android:layout_gravity="center_vertical"/>

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="CANCEL"
                        android:textColor="#02115a"
                        android:id="@+id/cancel_image"
                        android:background="@drawable/save_task_border"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                </LinearLayout>

        </LinearLayout>



</LinearLayout>