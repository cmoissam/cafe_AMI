<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/videoView"
        android:layout_width="match_parent" android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/info_action_item"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@drawable/popup_buttonback"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/cancel_popup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/me_chek_active_android"
        android:visibility="visible"/>
        
    </LinearLayout>
</LinearLayout>