<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.geeksters.hq.fragments.OneProfileMarketPlaceFragment">

    <!-- Get Members progress -->
    <ProgressBar android:id="@+id/marketProfileProgress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/myPostsSearchForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#eeeeee">

        <TextView
            android:id="@+id/search_no_element_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_no_element_found"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="10dp" />

        <ScrollView android:id="@+id/marketProfileScrollView" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/postsMarket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!--<LinearLayout-->
                    <!--android:id="@+id/commentsMarket"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical" >-->
                <!--</LinearLayout>-->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>