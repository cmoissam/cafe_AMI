<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:alpha="0.6"
        android:background="@drawable/backgroud_cell_shadow"></LinearLayout>
    <!-- Single ListItem -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:id="@+id/personalInformation">

        <ImageView
            android:id="@+id/border"
            android:layout_width="10dp"
            android:layout_height="85dp"
            android:layout_gravity="left"
            android:background="@drawable/left_colour_01"
            android:focusable="false"
            android:focusableInTouchMode="false"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pictureprofile_small_28x28"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:background="#dcdddf">
            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/full_name"
                    android:textSize="20dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="#64979a" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginTop="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hubInformation">

                <TextView
                    android:id="@+id/hubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hub_name"
                    android:ems="10"
                    android:textStyle="bold"
                    android:textColor="#cbcccf"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_marginTop="2dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>